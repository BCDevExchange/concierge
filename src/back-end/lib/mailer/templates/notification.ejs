<!doctype html>
<html style=''>
  <head>
    <meta charset="utf8" />
  </head>
  <body style='font-family: sans-serif; text-align: center; padding: 32px 16px;'>
    <table style='width: 100%; max-width: 400px; min-width: 250px; margin: 0 auto;'>
      <tr>
        <td class='logo' style='padding: 16px; background: #f8f9fa; border-radius: 4px; text-align: center;'>
          <a href='<%= logo.href %>' target='_blank' style='margin: 0 auto; text-align: center;'>
            <img src='<%= logo.src %>' alt='<%= logo.alt %>' style='height: 36px; margin: 0 auto;'/>
          </a>
        </td>
      </tr>
      <% if (title) { %>
      <tr>
        <td class='title' style='padding-top: 48px;'>
          <h1 style='margin: 0 auto; text-align: center; font-size: 22px; line-height: 1.2; padding: 0 16px;'>
            <%= title %>
          </h2>
        </td>
      </tr>
      <% } %>
      <% if (body) { %>
      <tr>
        <td class='body' style='padding: 0 16px; padding-top: 32px; margin: 0 auto; text-align: center; font-size: 16px; line-height: 1.3;'>
          <%= body %>
        </td>
      </tr>
      <% } %>
      <% if (callToAction) { %>
      <tr>
        <td class='cta' style='padding-top: 32px;'>
          <a href='<%= callToAction.href %>' target='_blank' style='white-space: nowrap; padding: 12px; border-radius: 4px; background: #0c99d6; color: white; text-decoration: none !important; display: block; max-width: 200px; margin: 0 auto; text-align: center; font-size: 16px; line-height: 1.3;'>
            <%= callToAction.text %>
          </a>
          <div class='cta-alt' style='padding: 0 16px; color: #6c757d; padding-top: 32px; text-align: center; margin: 0 auto; font-size: 14px; line-height: 1.3;'>
            If this button isn't working, you can navigate to the following link in your web browser:
            <br />
            <b><%= callToAction.href %></b>
          </div>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
